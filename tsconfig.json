{
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist",
    "module": "commonjs",
    "rootDir": "src",
    "paths": {
      "@common/*": ["./common/*"]
    },
    "lib": [
      "DOM",
      "ESNext",
      "ES2018",
      "ESNext.AsyncIterable"
    ],
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  }
}
